<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>packaged-distro</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>${artifactId}/lib</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<scope>compile</scope>
			<excludes>
				<exclude>*:zip</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>${artifactId}</outputDirectory>
			<scope>runtime</scope>			
			<includes>
				<include>*:zip</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>
	 <files>
		<file>
		 <source>target/${artifactId}-${project.version}.exe</source>
		 <outputDirectory></outputDirectory>
		 <destName>${artifactId}/${artifactId}.exe</destName>
		</file>
		<file>
		 <source>${basedir}/config/runme.sh</source>
		 <outputDirectory></outputDirectory>
		 <destName>${artifactId}/runme.sh</destName>
     <fileMode>0755</fileMode>
		 <lineEnding>unix</lineEnding>
		</file>
		<file>
		 <source>${basedir}/config/runme.bat</source>
		 <outputDirectory></outputDirectory>
		 <destName>${artifactId}/runme.bat</destName>
		 <fileMode>0755</fileMode>
		 <lineEnding>dos</lineEnding>
		</file>
		<file>
		 <source>${basedir}/config/ovtk2.l4j.ini</source>
		 <outputDirectory></outputDirectory>
		 <destName>${artifactId}/ovtk2.l4j.ini</destName>
		 <fileMode>0644</fileMode>
		 <lineEnding>dos</lineEnding>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>${basedir}/data</directory>
			<outputDirectory>${artifactId}/data</outputDirectory>
			<includes>
				<include>**/*.*</include>
				<include>**/*</include>
			</includes>
			<excludes>
   		 		<exclude>**/aspgd.org/**</exclude>
			</excludes>
      <fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>      
		</fileSet>
		<fileSet>
			<directory>${basedir}/config</directory>
			<outputDirectory>${artifactId}/config</outputDirectory>
			<includes>
				<include>**/*.*</include>
				<include>**/*</include>
			</includes>
			<excludes>
   		 		<exclude>dbs/**</exclude>
   				<exclude>seqs/**</exclude>
   				<exclude>**/tutorial/**</exclude>
	        <!-- Defined above, with x permissions, non-executables only here -->
	        <exclude>**/*.sh</exclude>
	        <exclude>**/*.bat</exclude>
			</excludes>
      <fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>      			
		</fileSet>
		<fileSet>
			<directory>${basedir}/config</directory>
			<outputDirectory>${artifactId}</outputDirectory>
			<fileMode>0644</fileMode>
			<includes>
				<include>README*.*</include>
				<include>readme*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/plugins</directory>
			<outputDirectory>${artifactId}/plugins</outputDirectory>
			<fileMode>0644</fileMode>
			<includes>
				<include>README*.*</include>
				<include>readme*.*</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>